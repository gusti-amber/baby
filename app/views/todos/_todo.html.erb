<%= turbo_frame_tag todo do %>
  <%= form_with model: [todo.task, todo], local: false, class: "flex items-center gap-2" do |f| %>
    <%= f.check_box :done, 
        class: "checkbox", 
        checked: todo.done?,
        data: { action: "change->todo-toggle#toggle" } %>
    <span class="<%= todo.done? ? 'line-through text-gray-500' : '' %>">
      <%= todo.body %>
    </span>
  <% end %>
<% end %> 