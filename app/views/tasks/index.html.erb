<div class="flex flex-col h-full gap-10 mx-20 my-10 bg-custom-cream min-h-screen">
  <p class="text-2xl font-bold text-custom-brown">タスク</p>
  <div class="flex justify-end gap-4">
    <%= link_to "作成", new_task_path, class: "btn bg-custom-sage hover:bg-custom-sage-white text-custom-cream border-none" %>
  </div>
  
  <% if @tasks.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @tasks.each do |task| %>
        <%= link_to task_path(task), class: "card card-side bg-custom-beige shadow-xl hover:shadow-2xl transition-shadow duration-300 border border-custom-sage/20" do %>
          <%= image_tag "logo.png", size: "100x100", class: "object-cover" %>
          <div class="card-body">
            <p class="card-title text-lg text-custom-brown"><%= task.title %></p>
            
            <% if task.tags.any? %>
              <div class="flex flex-wrap gap-2 mb-4">
                <% task.tags.each do |tag| %>
                  <span class="badge bg-custom-sage text-custom-cream border-none"><%= tag.name %></span>
                <% end %>
              </div>
            <% end %>
            
            <p class="text-sm text-custom-brown/70 text-right">
              作成日: <%= task.created_at.strftime("%Y年%m月%d日 %H:%M") %>
            </p>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-10">
      <p class="text-custom-brown/60">タスクがありません</p>
    </div>
  <% end %>
</div>